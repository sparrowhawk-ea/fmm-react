{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["dom", "es2020"],
		"module": "es2020",
		"moduleResolution": "node",
		"outDir": "./dist",
		"removeComments": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
